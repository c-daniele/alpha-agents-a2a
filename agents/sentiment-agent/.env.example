# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# LangSmith Tracing Configuration
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=alpha-agents-sentiment
LANGSMITH_TRACING=true

# LLM Provider Configuration
LLM_PROVIDER=openai  # Options: openai, bedrock
LLM_MODEL=gpt-4o    # For OpenAI: gpt-4o, gpt-4o-mini | For Bedrock: claude-sonnet-4-20250514-v1:0

# AWS Bedrock Configuration (only if LLM_PROVIDER=bedrock)
AWS_PROFILE=sbox_admin
AWS_REGION=us-east-1

# Server Configuration
HOST=0.0.0.0
PORT=3002

# Agent Configuration
AGENT_NAME=sentiment-agent
AGENT_VERSION=1.0.0
LOG_LEVEL=INFO

# News Collection Configuration
MAX_NEWS_ARTICLES=10
NEWS_LOOKBACK_DAYS=7
USER_AGENT=Mozilla/5.0 (compatible; SentimentAgent/1.0)

# Sentiment Analysis Configuration
SENTIMENT_THRESHOLD_POSITIVE=0.1
SENTIMENT_THRESHOLD_NEGATIVE=-0.1